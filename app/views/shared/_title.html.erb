<div id="title">
   <canvas id="title-canvas"></canvas>
</div>
<script>

   initCanvas(function() {

      var pictures = [];

      var sources = {
         tallFlower : "<%= asset_path 'tall_flower.png' %>",
         tallFlowerBlown : "<%= asset_path 'tall_flower_blown.png' %>",
         peckingChicken: "<%= asset_path 'pecking_chicken.png' %>",
         hinaAndJohnsWedding: "<%= asset_path 'hina_and_johns_wedding.png' %>",
         johnAndHinasWedstival: "<%= asset_path 'john_and_hinas_wedstival.png' %>",
         peckingChickenPecking: "<%= asset_path 'pecking_chicken_pecking.png' %>"
      };

      pictures = [
         new TallFlower(0, 40, 200, 130, -Math.PI/18),
         new Pictures("hinaAndJohnsWedding", 145, 100, 600, 100, 0),
         // new Pictures("johnAndHinasWedstival", 135, 100, 600, 130, 0),
         new PeckingChicken(750, 120, 50, 60, 0)
      ]

      // title
      var titleCanvas = canvas(sources, "title-canvas", 940, 200, pictures);
      titleCanvas.addEventListener('click', function() {
         window.location.href="/";
      }, false)
   });

</script>

