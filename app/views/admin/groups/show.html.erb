<div id="description">
   <div>
      <h3><%= @group.name %></h3>
   </div>
   <div>
      <%= render partial: "admin/shared/group", object: @group %>
   </div>
   <p>
   The email address to contact the group is <%= @group.email %>
   </p>
   <%= render partial: "send_invite_button", locals: {group: @group} %>
   <div class="middle-btn-row">
      <%= link_to image_tag("edit.png"), edit_admin_group_path(@group), { class: "cancel" } %>
      <%= button_to "", admin_group_path(@group), method: :delete, class: "delete cancel" %>
      <%= link_to image_tag("cancel.png"), admin_groups_path, { class: "cancel" } %>
   </div>
   <%= link_to image_tag("add_guest.png"), new_admin_group_guest_path(@group), { class:"add" } %>
</div>


