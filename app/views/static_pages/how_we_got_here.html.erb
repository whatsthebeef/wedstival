   </div>
</div>
<script type="text/javascript">

   initCanvas(function() {

      var sources = {
         tallFlower : "<%= asset_path 'tall_flower.png' %>",
         tallFlowerBlown : "<%= asset_path 'tall_flower_blown.png' %>",
         flower : "<%= asset_path 'flower.png' %>",
         hinaRightStep1: "<%= asset_path 'hina_right_step_1.png' %>",
         hinaRightStep2: "<%= asset_path 'hina_right_step_2.png' %>",
         hinaLeftStep1: "<%= asset_path 'hina_left_step_1.png' %>",
         hinaLeftStep2: "<%= asset_path 'hina_left_step_2.png' %>",
         hinaArmRight: "<%= asset_path 'hina_arm_right.png' %>",
         hinaArmLeft: "<%= asset_path 'hina_arm_left.png' %>"
      };

      var flowerHeight = 150;
      var hina = new Hina(0, window.innerHeight-400, 300, 400, 1);
      var pictures = [hina];
      pictures.push.apply(pictures, initPicturesByType(TallFlower, 100, 150, flowerHeight, 
      {minx:-100, miny:window.innerHeight-flowerHeight, maxy:window.innerHeight-flowerHeight}));

      // title
      canvas(sources, "dancer-canvas", window.innerWidth, window.innerHeight, pictures);
      window.setInterval(function() {
         pictures.push(new FlyingFlower(hina.absX()+hina.width/2, 
            (window.innerHeight-3*flowerHeight/4), 40, 40, 2));
         pictures.push(new FlyingFlower(hina.absX()+hina.width/2, 
            (window.innerHeight-3*flowerHeight/4), 40, 40, -2));
      }, 5000);
   });


</script>

