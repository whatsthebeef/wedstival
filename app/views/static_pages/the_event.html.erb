<script type="text/javascript">

   initCanvas(function() {

      var sources = {
         sketchHeartless: "<%= asset_path 'sketch_heartless.png' %>",
         fireStation: "<%= asset_path 'fire_station.png' %>",
         roofChicken: "<%= asset_path 'roof_chicken.png' %>",
         roofChickenDown: "<%= asset_path 'roof_chicken_left.png' %>",
         heart: "<%= asset_path 'heart.png' %>"
      };

      var pictures = []; 
      var hx = [{x:25, y:250}, {x:50, y:225}, {x:75, y:180}, 
                  {x:325, y:170}, {x:375, y:180}, {x:320, z:250}];
      var pictures = [
            new Pictures("sketchHeartless", 0, 100, 500, 500, 0),
            new FireStation(135, 90, 170, 150, -0.15)
      ]; 
      window.setInterval(function(){
         var h = hx[Math.floor(Math.random()*hx.length)];
         pictures.push(new Heart(h.x, h.y, 20, 20, generatePosition(0.25, -0.25)));
      }, 400);

      canvas(sources, "heart-sketch-canvas", 500, 700, pictures);
   });


</script>
